{% extends '::layout.html.twig' %}

{% block body %}
{% autoescape  %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ item.getName(locales())}} <font size="2">{{ 'level' | trans({'%level%': item.level}, 'item')}}</font></h3>
        </div>
        <div class="panel-body">
            {% for name, value in item.characteristics %}
                {{ name | trans({}, 'item') }}<br>
            {% endfor %}
        </div>
    </div>
{% endautoescape %}
{% endblock %}
