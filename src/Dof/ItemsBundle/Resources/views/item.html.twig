{% if display is not defined %}
    {% set display = 'normal' %}
{% endif %}

{% if not item.personalized %}
    {% set type = 'item' %}
    {% set itemTemplate = item %}
{% else %}
    {% set type = 'build' %}
    {% set itemTemplate = item.itemTemplate %}
{% endif %}

{% if item.personalized %}
    {% include 'DofItemsBundle:Templates:personalized.html.twig' %}
{% elseif item.weapon %}
    {% include 'DofItemsBundle:Templates:weapon.html.twig' %}
{% elseif item.equipment %}
    {% include 'DofItemsBundle:Templates:equipment.html.twig' %}
{% else %}
    {% include 'DofItemsBundle:Templates:layout.html.twig' %}
{% endif %}
