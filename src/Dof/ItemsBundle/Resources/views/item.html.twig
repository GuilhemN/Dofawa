{% if display is not defined %}
    {% set display = 'normal' %}
{% endif %}

{% if item.craft is defined and item.craft %}
    {% set type = 'craft' %}
    {% set itemTemplate = item.itemTemplate %}
{% elseif not item.personalized %}
    {% set type = 'item' %}
    {% set itemTemplate = item %}
{% else %}
    {% set type = 'build' %}
    {% set itemTemplate = item.itemTemplate %}
{% endif %}

{% set has_content = false %}
{% if itemTemplate.weapon %}
    {% set template = 'DofItemsBundle:Templates:weapon.html.twig' %}
{% elseif itemTemplate.pet %}
    {% set template = 'DofItemsBundle:Templates:pet.html.twig' %}
{% elseif itemTemplate.animal %}
    {% set template = 'DofItemsBundle:Templates:animal.html.twig' %}
{% elseif itemTemplate.equipment %}
    {% set template = 'DofItemsBundle:Templates:equipment.html.twig' %}
{% else %}
    {% set template = 'DofItemsBundle:Templates:layout.html.twig' %}
{% endif %}

{% if type == 'craft' %}
    {% include 'DofItemsBundle:Templates:craft.html.twig' %}
{% else %}
    {% include template %}
{% endif %}
