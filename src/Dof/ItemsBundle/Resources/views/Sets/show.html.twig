{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ set.getName(locales()) }}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('admin_dof_items_itemset_edit', {'id': set.id}) }}">
            Editer
        </a>
    {% endif %}

    <div class="well well-sm text-center">
        <div class="page-header nopadding marginbottom">
          <h1>{{ set.getName(locales()) }} <small>{{ 'level' | trans({'%level%': set.level}, 'item') }}</small></h1>
        </div>
        <p>
            {% if set.preliminary %}
                <span class="label label-danger">BÃ©ta</span>
            {% endif %}
            {% if set.release != 1 %}
                <span class="label label-default hidden-xs">{{ set.release }}</span>
            {% endif %}
            <br>
            {{ set.itemCount }} Item
        </p>

        {% for bonus in set.primaryBonus %}
            <img src="{{ asset('bundles/dofitems/img/' ~ bonus ~ '.png') }}" alt="{{ bonus }}">
        {% endfor %}
    </div>
	<div class="row">
	    {% for combination in set.combinations %}

			  <div class="col-xs-6 col-lg-4">
			    <div class="well well-sm">
			    	<center>
                        <strong>{{ combination.itemCount }} items</strong>
                    </center>
			    	{# Get the characteristics #}
	        		{% include 'DofItemsBundle::characteristics.html.twig' with {'item': combination} %}
			    </div>
			  </div>

		{% endfor %}
	</div>

    {% for item in set.items %}
        {% include 'DofItemsBundle::item.html.twig' with {'item': item} %}
    {% endfor %}

{% endblock %}
