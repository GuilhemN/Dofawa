{% extends 'DofArticlesBundle::layout.html.twig' %}

{% block breadcrumb %}
  <li>Forum</li>
{% endblock %}

{% block body %}
{% autoescape %}
	{% for category in categories %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">{{ category.getName(locales()) }}</h3>
			</div>
			<div class="panel-body">
			    {% for forum in category.forums %}
			    	{{ forum.getName(locales()) }}
			    {% endfor %}
			</div>
			</div>
		</div>
	{% endfor %}
{% endautoescape %}
{% endblock %}
