{% extends 'DofForumBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ forum.getName(locales()) }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
	<div class="panel panel-default">
        <a style="float: right;" href="{{ path('dof_forum_add_topic', { 'slug' : forum.slug }) }}"><button type="button" class="btn btn-primary">
            nouveau
        </button></a>
		<div class="panel-heading">
			<h3 class="panel-title">{{ forum.getName(locales()) }}</h3>
		</div>
		<table class="table">
			<tr>
                <th>Topic</th>
                <th>par</th>
                <th>le</th>
                <th>RÃ©ponse(s)</th>
            </tr>
			{% for topic in forum.topics %}
				<tr>
                    <td>
                        <a href="{{ path('dof_forum_show_topic', { 'slug' : topic.slug }) }}">
                            {{ topic.getName(locales()) }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('dof_profile_userpage', { 'slug' : topic.owner }) }}">
                            {{ topic.owner }}
                        </a>
                    </td>
                    <td>
                        {{ topic.getLastPost() | date("h:i:s d/m/Y") }}
                    </td>
                    <td>{{ topic.getCountPosts() }}</td>
                </tr>
			{% endfor %}
		</table>
	</div>
{% endautoescape %}
{% endblock %}
