{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    <li>Classes</li>
    <li>
        <a href="{{ path('dof_characters_show', {'slug': breed.slug}) }}">
            {{ breed.getName(locales()) }}
        </a>
    </li>
{% endblock %}

{% block body %}
{% autoescape %}
<div class="row">
  <div class="col-md-12">
    <div class="thumbnail">
      {% include 'DofGraphicsBundle:Component:renderer.html.twig' with {
                'look': look} only %}
      <div class="caption">
        <h3>{{ breed.getLongName(locales()) }}</h3>
        <h4>GamePlay</h4>
        <p>{{ breed.getGameplayDescription(locales()) }}</p>
        {% if breed.getGameplayDescription(locales()) != breed.getDescription(locales()) %}
	        <h4>Description</h4>
	        <p>{{ breed.getDescription(locales()) }}</p>
	    {% endif %}
        <form method="POST" action="{{ path('dof_build_homepage') }}#form_create">
        	<input name="newChar" value="{{ breed.id }}" type="hidden">
        	<button class="btn btn-primary" type="submit">Cr√©er</button>
        </form>
      </div>
    </div>
  </div>
</div>

{% for spell in breed.sortedSpells %}
    {% include 'DofCharactersBundle::spell.html.twig' %}
{% endfor %}
{% endautoescape %}
{% endblock %}
