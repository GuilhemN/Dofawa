{% extends 'DofGuildBundle::layout.html.twig' %}

{% block breadcrumb %}
  {{ parent() }}<li>Details</li>
{% endblock %}

{% block body %}
{% autoescape %}
<h2><a href="{{path('dof_guild_home')}}">Retour au guildes !</a></h2> 
 	<div class="panel panel-default">
		 	<div class="panel-heading">{{guild.getName()}}</div>
		  	<div class="panel-body">
				<table>
					<tr><td><b>Nom de la guilde : </b></td><td>{{guild.getName()}}</td></tr>
					<tr><td><b>Date : </b></td><td>{{guild.getCreatedAt() | date("d/m/Y")}}</td></tr>
					<tr><td><b>Serveur : </b></td><td>{{guild.getServeur()}}</td></tr>
					<tr><td><b>Niveau de la guilde : </b></td><td>{{guild.getLvlguild()}}</td></tr>
					<tr><td><b>Niveau minimum de recrutement : </b></td><td>{{guild.getLvlmini()}}</td></tr>
					<tr><td><b>Nom du meneur : </b></td><td>{{guild.getLeader()}}</td></tr>
					<tr><td><b>Recrutement : </b></td><td>{% if guild.getRecruitment() %} Oui {% else %} Non {% endif %}</td></tr>
					<tr><td><b>Spécialité : </b></td><td>{{guild.getSpeciality()}}</td></tr>
					<tr><td><b>Description : </b></td><td>{{guild.getDescription()}}</td></tr>
					<tr><td><b>Forum : </b></td><td>{{guild.getForum()}}</td></tr>
				</table> 
				{% if app.user is not null %}
					<a class="text-center" href="{{path('dof_guild_register')}}">S'inscrire</a>
				{% endif %}
			</div> 
		</div>
{% endautoescape %}
{% endblock %}