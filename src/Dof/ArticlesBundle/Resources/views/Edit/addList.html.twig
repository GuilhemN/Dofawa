{% extends 'DofArticlesBundle::layout.html.twig' %}

{% block breadcrumb %}
  {{ parent() }}
  <li>Liste des propositions: {{ type }}</li>
{% endblock %}

{% block body %}
<h3>Liste des propositions</h3>
<div class="btn-group">
  <a href="{{ path('dof_articles_addList', { 'type' : 'news', 'page' : '1' }) }}"><button type="button" class="btn btn-default">News</button></a>
  <a href="{{ path('dof_articles_addList', { 'type' : 'tutorial', 'page' : '1' }) }}"><button type="button" class="btn btn-default">Tutoriels</button></a>
  <a href="{{ path('dof_articles_addList', { 'type' : 'dungeon', 'page' : '1' }) }}"><button type="button" class="btn btn-default">Donjons</button></a>
  <a href="{{ path('dof_articles_addList', { 'type' : 'quest', 'page' : '1' }) }}"><button type="button" class="btn btn-default">QuÃªtes</button></a>
</div>
{% include 'DofMainBundle:Default:pagination.html.twig' with {'pagination': pagination} %}
<ul class="list-group">
  {% for article in articles %}
      <li class="list-group-item"><a href="{{ path('dof_articles_valid', { 'slug' : article.slug }) }}">{{ article.getName(locales()) }}</a><span class="badge hidden-sm hidden-md">le {{ article.createdAt | date("d/m/Y") }}</span></li>
  {% else %}
      <li class="list-group-item">Pas (encore !) d'articles</li>
  {% endfor %}
</ul>
{% include 'DofMainBundle:Default:pagination.html.twig' with {'pagination': pagination} %}
{% endblock %}