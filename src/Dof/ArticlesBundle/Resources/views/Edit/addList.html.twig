{% extends 'DofArticlesBundle::layout.html.twig' %}

{% block breadcrumb %}
  {{ parent() }}
  <li>Liste des propositions: {{ type }}</li>
{% endblock %}

{% block body %}
<ul>
	<li><a href="{{ path('dof_articles_addList', { 'type' : 'news', 'page' : '1' }) }}">Voir les propositions de news</a></li>
	<li><a href="{{ path('dof_articles_addList', { 'type' : 'tutorial', 'page' : '1' }) }}">Voir les propositions de tutoriels</a></li>
	<li><a href="{{ path('dof_articles_addList', { 'type' : 'dungeon', 'page' : '1' }) }}">Voir les propositions de donjons</a></li>
	<li><a href="{{ path('dof_articles_addList', { 'type' : 'quest', 'page' : '1' }) }}">Voir les propositions de quÃªtes</a></li>
</ul>
{% include 'DofMainBundle:Default:pagination.html.twig' with {'pagination': pagination} %}
<ul class="list-group">
  {% for article in articles %}
      <li class="list-group-item"><a href="{{ path('dof_articles_valid', { 'slug' : article.slug }) }}">{{ article.getName(locales()) }}</a><span class="badge hidden-sm hidden-md">le {{ article.createdAt | date("d/m/Y") }}</span></li>
  {% else %}
      <li class="list-group-item">Pas (encore !) d'articles</li>
  {% endfor %}
</ul>
{% include 'DofMainBundle:Default:pagination.html.twig' with {'pagination': pagination} %}
{% endblock %}