{% autoescape  %}
    <div class="panel panel-default item">
        <div class="panel-heading">
            <h3 class="panel-title">{{ monster.getName(locales())}} <font size="2">Niveau : {{ monster.minLevel }} {% if monster.maxLevel != monster.minLevel %}- {{ monster.maxLevel}}{% endif %}</font></h3>
        </div>
        <div class="panel-body">
            <div class="row">
                {# Left column #}
                <div class="col-sm-3">
                    <a href="{{ path('dof_monster_show', {'slug': monster.slug}) }}" class="thumbnail">
                        <img class="img-responsive" src="{{ asset('bundles/dofitems/img/default.png') }}" alt="{{ monster.getName(locales()) }}">
                    </a>
                    <div class="text-center">
                        <p>
                            {% if monster.preliminary %}
                                <span class="label label-danger">BÃªta</span>
                            {% endif %}
                            {% if monster.release != 1 %}
                                <span class="label label-default hidden-xs">{{ monster.release }}</span>
                            {% endif %}
                        </p>
                    </div>
                </div>

                {% macro effect(min,max) %}
                    {{ min }}
                    {% if min != max %}
                        {{ 'to' | trans({}, 'item') }}
                        {{ max }}
                    {% endif %}
                {% endmacro %}
                {% import _self as monsterEffect %}

                {# Right column #}
                <div class="row">
                    <div class="col-lg-3">
                        {{ 'vitality' | trans({'%1%': ''}, 'item') }}: <img src="{{ asset('bundles/dofitems/img/vitality.png') }}" alt=""> {{ monsterEffect.effect( monster.minLifePoints , monster.maxLifePoints) }}
                        <br>
                        {{ 'ap' | trans({'%1%': ''}, 'item') }}: <img src="{{ asset('bundles/dofitems/img/ap.png') }}" alt=""> {{ monsterEffect.effect( monster.minActionPoints , monster.maxActionPoints) }}
                        <br>
                        {{ 'mp' | trans({'%1%': ''}, 'item') }}: <img src="{{ asset('bundles/dofitems/img/mp.png') }}" alt=""> {{ monsterEffect.effect( monster.minMovementPoints , monster.maxMovementPoints) }}
                        <br>
                    </div>
                    <div class="col-lg-5">
                        <img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt=""> {{ monsterEffect.effect( monster.minEarthResistance , monster.maxEarthResistance) }}{{ 'percentEarthResistance' | trans({'%1%': ''}, 'item') }}
                        <br>
                        <img src="{{ asset('bundles/dofitems/img/air.png') }}" alt=""> {{ monsterEffect.effect( monster.minAirResistance , monster.maxAirResistance) }}{{ 'percentAirResistance' | trans({'%1%': ''}, 'item') }}
                        <br>
                        <img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt=""> {{ monsterEffect.effect( monster.minFireResistance , monster.maxFireResistance) }}{{ 'percentFireResistance' | trans({'%1%': ''}, 'item') }}
                        <br>
                        <img src="{{ asset('bundles/dofitems/img/water.png') }}" alt=""> {{ monsterEffect.effect( monster.minWaterResistance , monster.maxWaterResistance) }}{{ 'percentWaterResistance' | trans({'%1%': ''}, 'item') }}
                        <br>
                        <img src="{{ asset('bundles/dofitems/img/neutral.png') }}" alt=""> {{ monsterEffect.effect( monster.minNeutralResistance , monster.maxNeutralResistance) }}{{ 'percentNeutralResistance' | trans({'%1%': ''}, 'item') }}
                        <br>
                    </div>
                    {# Close right column #}
                </div>
            </div>

        </div>
    </div>
{% endautoescape %}
