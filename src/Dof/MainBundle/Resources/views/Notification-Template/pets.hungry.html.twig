{% block title %}
    {{ 'pets.hungry' | trans({'%petName%': ent.itemTemplate.getName(locales()) | e('html'), '%name%': ent.name | e('html')}, 'notifications') | raw }}
{% endblock %}

{% block path %}
    {{ path('dof_items_manager_pets') }}
{% endblock %}

{% block actions %}
    {% if pet.lastFeeding < notification.createdAt %}
    <form method="POST" action="{{ path('dof_items_manager_pets_feed') }}">
        <input type="hidden"  name="pets[]" value="{{ ent.id }}" >
        <button type="submit" class="btn btn-default">Nourrir</button>
    </form>
    {% endif %}
{% endblock %}
