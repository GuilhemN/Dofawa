{% extends 'form_div_layout.html.twig' %}

{# Affichage des erreurs #}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
        <div class="alert alert-warning alert-dismissable">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	      <strong>Erreur !</strong> {{ error.message }}
	    </div>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{# Champ individuel #}
{% block form_row %}
{% spaceless %}
	<div class="form-group">
		{{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
	</div>
{% endspaceless %}
{% endblock form_row %}

{# champs #}
{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <div class="col-sm-10">
	    <input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
    </div>
{% endspaceless %}
{% endblock form_widget_simple %}

{# Label #}
{% block form_label %}
{% spaceless %}
    {% if label is not sameas(false) %}
        {% if not compound %}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {% endif %}
        {% if required %}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {% endif %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        <label class="col-sm-2 control-label"{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
    {% endif %}
{% endspaceless %}
{% endblock form_label %}