<li class="dropdown" id="notifications">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Notifications <span class="badge">{{ unread }}</span> <b class="caret"></b></a>
    <ul class="dropdown-menu">
        {% for notification in notifications %}
        <li {% if notification.isRead == false %}class="active"{% endif %}>
            <a href="{{ path(notification.path, notification.pathParams) }}">
                {{ notification.translationString | trans(notification.translationParams, 'notifications') | raw }}
                <br>
                <small>{{ notification.createdAt | localizeddate('full', 'short') }}</small>
            </a>
        </li>
        <li class="divider"></li>
        {% endfor %}
    </ul>
</li>
