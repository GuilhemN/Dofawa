{% for notification in notifications %}
    <li {% if notification.isRead == false %}class="active"{% endif %}>
        <a href="{{ path(notification.path, notification.pathParams) }}">
            {{ notification.translationString | trans(notification.translationParams, 'notifications') | raw }}
            <br>
            <small>{{ notification.createdAt | date_format }}</small>
        </a>
    </li>
    {% if loop.last == false %}
        <li class="divider"></li>
    {% endif %}
{% endfor %}
