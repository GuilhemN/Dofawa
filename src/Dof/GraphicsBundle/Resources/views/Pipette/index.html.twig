{% extends "::layout.html.twig" %}

{% block body %}
<form action="{{ path('dof_graphics_pipette_process') }}" method="POST">
<label>Adresse de la page perso : <input name="addresses[]" /></label>
<input type="submit" value="C'est parti !" />
</form>
<br />
<br />
{% for result in results %}
{% if result.look is not null %}
  <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">{{ result.address }}</div>
      <div class="panel-body">
        <p>Voici les infos de cette page perso :</p>
      </div>

      <!-- Table -->
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Classe</td>
            <td>
              {% if result.breed is empty %}
                Non d√©finie
              {% else %}
                {{ result.breed }}
              {% endif %}</td>
          </tr>
          {% for key, color in result.colors %}
          <tr>
            <td>Couleur {{ key }}</td>
            <td>{{ color | dechex }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

<div>{{ result.look.format(true) }}</div>
{% else %}
<div class="error">Une erreur s'est produite !</div>
{% endif %}
{% endfor %}
{% endblock %}
