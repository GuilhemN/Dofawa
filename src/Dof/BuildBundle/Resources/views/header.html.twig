{% set slugs = {
    'user': user.slug,
    'character': character.slug,
    'stuff': stuff.slug
} %}
<ul class="nav nav-tabs" role="tablist">
    {% if can_write | default(false) %}
    <li {{ is_current_page('dof_build_edit') | raw }}>
        <a href="{{ path('dof_build_edit', slugs) }}">Configuration</a>
    </li>
    {% endif %}
    <li {{ is_current_page('dof_build_show') | raw }}>
        <a href="{{ path('dof_build_show', slugs) }}">Build</a>
    </li>
    <li {{ is_current_page('dof_build_show_characteristics') | raw }}>
        <a href="{{ path('dof_build_show_characteristics', slugs) }}">Caract√©ristiques</a>
    </li>
    <li {{ is_current_page('dof_build_show_weapondamages') | raw }}>
        <a href="{{ path('dof_build_show_weapondamages', slugs) }}">Arme</a>
    </li>
</ul>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><strong>{{ character.name }}</strong>, {{ 'level' | trans({'%level%': character.level}, 'item')}}</h3>
    </div>
    <div class="panel-body text-center">
        <div class="row">
            {% if characteristics is defined %}
            <div class="col-xs-0 col-md-4"></div>
            <div class="col-xs-6 col-md-4">
            {% endif %}
            
                {% include 'DofGraphicsBundle:Component:renderer.html.twig' with {
                'look': stuff.look.toEntityLook()} only %}

            {% if characteristics is defined %}
            </div>
            {% set pdv = 55 + (5 * character.level) + characteristics.vitality %}
            {% set ini = characteristics.strength + characteristics.intelligence + characteristics.chance + characteristics.agility + characteristics.initiative %}

            <div class="col-xs-6 col-md-4">
                <div class="panel panel-default">
                    <table class="table">
                        <tr><td><img src="{{ asset('bundles/dofitems/img/vitality.png') }}" alt=""></td><td>{{ pdv }}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/ap.png') }}" alt=""></td><td>{% if character.level > 100 %} {{ characteristics.ap + 7 }} {% else %} {{ characteristics.ap + 6 }} {% endif %}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/mp.png') }}" alt=""></td><td>{{ characteristics.mp + 3 }}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/initiative.png') }}" alt=""></td><td>{{ ini }}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/prospecting.png') }}" alt=""></td><td>{{ characteristics.prospecting + 100 }}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/range.png') }}" alt=""></td><td>{{ characteristics.range }}</td></tr>
                        <tr><td><img src="{{ asset('bundles/dofitems/img/summons.png') }}" alt=""></td><td>{{ characteristics.summons }}</td></tr>
                    </table>
                </div>
            </div>
            {% endif %}
        </div>
        <p>
            {% for bonus in stuff.primaryBonus %}
                <img src="{{ asset('bundles/dofitems/img/' ~ bonus ~ '.png') }}" alt="{{ bonus }}">
            {% endfor %}
        </p>

    </div>
</div>
