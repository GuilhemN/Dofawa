{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
{{ parent() }}
<li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
<li>{{ character.name }}</li>
<li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
{% include 'DofBuildBundle::header.html.twig' %}
<form method="POST">
    <div class="text-center">
        <button type="submit" class="btn btn-default">Enregistrer</button>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Stuff</h3>
        </div>
        <div class="panel-body">
            {{ form_row(form.title) }}
            {{ form_row(form.vitality) }}
            {{ form_row(form.wisdom) }}
            {{ form_row(form.strength) }}
            {{ form_row(form.intelligence) }}
            {{ form_row(form.chance) }}
            {{ form_row(form.agility) }}
            {{ form_row(form.stuffVisibility) }}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Personnage</h3>
        </div>
        <div class="panel-body">
            {{ form_row(form.name) }}
            {{ form_row(form.level) }}
            {{ form_row(form.breed) }}
            {{ form_row(form.characterVisibility) }}
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-default">Enregistrer</button>
    </div>
    {{ form_rest(form) }}
</form>
{% endautoescape %}
{% endblock %}
