{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
{{ parent() }}
<li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
<li>{{ character.name }}</li>
<li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
{% include 'DofBuildBundle::header.html.twig' %}
<form method="POST">
    <div class="text-center">
        <button type="submit" class="btn btn-default">Enregistrer</button>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Stuff</h3>
        </div>
        <div class="panel-body">
            {{ form_row(form.title) }}
            <div class="form-group">
                <label for="stuffVitality" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/vitality.png') }}" alt=""> {{ 'vitality' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[vitality]" class="form-control" id="stuffVitality" value="{{ stuff.vitality }}">
                </div>
            </div>
            <div class="form-group">
                <label for="stuffWisdom" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/wisdom.png') }}" alt=""> {{ 'wisdom' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[wisdom]" class="form-control" id="stuffWisdom" value="{{ stuff.wisdom }}">
                </div>
            </div>
            <div class="form-group">
                <label for="stuffStrength" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt=""> {{ 'strength' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[strength]" class="form-control" id="stuffStrength" value="{{ stuff.strength }}">
                </div>
            </div>
            <div class="form-group">
                <label for="stuffIntelligence" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt=""> {{ 'intelligence' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[intelligence]" class="form-control" id="stuffIntelligence" value="{{ stuff.intelligence }}">
                </div>
            </div>
            <div class="form-group">
                <label for="stuffChance" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/water.png') }}" alt=""> {{ 'chance' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[chance]" class="form-control" id="stuffChance" value="{{ stuff.chance }}">
                </div>
            </div>
            <div class="form-group">
                <label for="stuffAgility" class="col-sm-3 control-label">
                    <img src="{{ asset('bundles/dofitems/img/air.png') }}" alt=""> {{ 'agility' | trans({'%1%': ''},'item') }}
                </label>
                <div class="col-sm-9">
                    <input type="number" name="stuff[agility]" class="form-control" id="stuffAgility" value="{{ stuff.agility }}">
                </div>
            </div>
            {{ form_row(form.stuffVisibility) }}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Personnage</h3>
        </div>
        <div class="panel-body">
            {{ form_row(form.name) }}
            {{ form_row(form.level) }}
            {{ form_row(form.breed) }}
            {{ form_row(form.characterVisibility) }}
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-default">Enregistrer</button>
    </div>
</form>
{% endautoescape %}
{% endblock %}
