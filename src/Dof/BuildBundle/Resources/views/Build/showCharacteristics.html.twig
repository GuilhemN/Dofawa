{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
    <li>{{ character.name }}</li>
    <li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
    {% include 'DofBuildBundle::header.html.twig' %}
    
    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>Caractéristique</th><th>Total</th>
                </tr>
            </thead>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/vitality.png') }}" alt="">{{ 'vitality' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.vitality }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/wisdom.png') }}" alt="">{{ 'wisdom' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.wisdom }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt="">{{ 'strength' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.strength }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt="">{{ 'intelligence' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.intelligence }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/water.png') }}" alt="">{{ 'chance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.chance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/air.png') }}" alt="">{{ 'agility' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.agility }}</td>
                </tr>
        </table>
    </div>

    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>Résistances</th><th class="text-right">%</th><th class="text-right">fixe</th>
                </tr>
            </thead>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/neutral.png') }}" alt="">{{ 'neutralResistance' | trans({'%1%': ''},'item') }}</td><td class="text-right">{{ characteristics.percentNeutralResistance }} %</td><td class="text-right">{{ characteristics.neutralResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt="">{{ 'earthResistance' | trans({'%1%': ''},'item') }}</td><td class="text-right">{{ characteristics.percentEarthResistance }} %</td><td class="text-right">{{ characteristics.earthResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt="">{{ 'fireResistance' | trans({'%1%': ''},'item') }}</td><td class="text-right">{{ characteristics.percentFireResistance }} %</td><td class="text-right">{{ characteristics.fireResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/water.png') }}" alt="">{{ 'waterResistance' | trans({'%1%': ''},'item') }}</td><td class="text-right">{{ characteristics.percentWaterResistance }} %</td><td class="text-right">{{ characteristics.waterResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/air.png') }}" alt="">{{ 'airResistance' | trans({'%1%': ''},'item') }}</td><td class="text-right">{{ characteristics.percentAirResistance }} %</td><td class="text-right">{{ characteristics.airResistance }}</td>
                </tr>
        </table>
    </div>
{% endautoescape %}
{% endblock %}
