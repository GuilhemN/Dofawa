{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dof_profile_userpage', {'slug': perso.owner.slug}) }}">{{ perso.owner.username }}</a></li>
    <li>{{ perso.name }}</li>
    <li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><strong>{{ perso.name }}</strong>, {{ 'level' | trans({'%level%': perso.level}, 'item')}}</h3>
        </div>
        <div class="panel-body text-center">
            {% include 'DofGraphicsBundle:Component:renderer.html.twig' with {
                'look': stuff.look.toEntityLook()
            } only %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {% for type, slot in dofus_slots %}
            <div class="col-xs-3 col-md-12 col-lg-6">
                {% if items[slot] is defined %}
                    <div class="thumbnail">
                        <img class="img-responsive" src="{{ asset('bundles/dofitems/img/default.png') }}" alt="{{ items[slot].itemTemplate.getName(locales()) }}">
                    </div>
                {% else %}
                    <a href="{{ path('dof_build_additem', {'user': perso.owner.slug, 'character': perso.slug, 'stuff': stuff.slug, 'type': type})}}" class="thumbnail">
                        <img src="{{ asset('bundles/dofbuild/img/item.jpg') }}" alt="...">
                    </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        <div class="col-md-8">
            {% for type, slot in items_slots %}
            <div class="col-xs-3 col-md-6 col-lg-4">
                {% if items[slot] is defined %}
                    <div class="thumbnail">
                        <img class="img-responsive" src="{{ asset('bundles/dofitems/img/default.png') }}" alt="{{ items[slot].itemTemplate.getName(locales()) }}">
                    </div>
                {% else %}
                    <a href="{{ path('dof_build_additem', {'user': perso.owner.slug, 'character': perso.slug, 'stuff': stuff.slug, 'type': type})}}" class="thumbnail">
                        <img src="{{ asset('bundles/dofbuild/img/item.jpg') }}" alt="...">
                    </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
{% endautoescape %}
{% endblock %}
