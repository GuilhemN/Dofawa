{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
    <li>{{ character.name }}</li>
    <li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
    {% include 'DofBuildBundle::header.html.twig' %}
    
    {% for spell in character.breed.spells %}
        <div class="panel panel-default item" id="spell-{{ spell.id }}">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ spell.getName(locales()) }} <font size="2"></font>
                    <span class="pull-right">
                        Niveau d'obtention :
                        <span class="level">
                            {% if spell.ranks[0] is defined %}{{ spell.ranks[0].obtainmentLevel }}{% endif %}
                        </span>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-2">
                        <a href="{{ path('dof_spell_show', {'slug': spell.slug}) }}" class="thumbnail">
                            <img class="img-responsive" src="/bundles/dofitems/img/default.png" alt="{{ spell.getName(locales()) | e('html_attr') }}">
                        </a>
                        <div class="text-center">
                            <p>
                                {% if spell.preliminary %}
                                    <span class="label label-danger">Bêta</span>
                                {% endif %}
                                {% if spell.release != 1 %}
                                    <span class="label label-default hidden-xs">{{ spell.release }}</span>
                                {% endif %}
                            </p>
                            <p>
                            </p>
                        </div>
                    </div>

                    <div class="col-sm-10">
                        <ul class="nav nav-tabs" role="tablist">
                            {% for rank in spell.ranks %}
                            <li {% if loop.first %}class="active"{% endif %}><a onclick="$('#spell-{{ spell.id }} .level').html('{{ rank.obtainmentLevel }}');" href="#rank{{ spell.id }}-{{ rank.rank }}" role="tab" data-toggle="tab">Rang {{ rank.rank }}</a></li>
                            {% endfor %}
                        </ul>
                        <div class="tab-content">
                            {% for rank in spell.ranks %}
                            <div class="tab-pane {% if loop.first %}active{% endif %}" id="rank{{ spell.id }}-{{ rank.rank }}">
                                <b>Effets :</b><br>
                                {% for effect in rank.effects if not effect.critical and (not effect.hidden or is_granted('ROLE_SPELL_XRAY')) %}

                                    {% set element = (effect.effectTemplate.element | element) %}
                                    {% if element == "neutral" %}
                                        {% set carac = characteristics.strength %}
                                        {% set domFix = characteristics.neutralDamage %}
                                    {% elseif element == "earth" %}
                                        {% set carac = characteristics.strength %}
                                        {% set domFix = characteristics.earthDamage %}
                                    {% elseif element == "fire" %}
                                        {% set carac = characteristics.intelligence %}
                                        {% set domFix = characteristics.fireDamage %}
                                    {% elseif element == "water" %}
                                        {% set carac = characteristics.chance %}
                                        {% set domFix = characteristics.waterDamage %}
                                    {% elseif element == "air" %}
                                        {% set carac = characteristics.agility %}
                                        {% set domFix = characteristics.airDamage %}
                                    {% elseif element == "heal" %}
                                        {% set carac = characteristics.intelligence %}
                                        {% set heal = characteristics.heals %}
                                    {% endif %}

                                    {% set min = effect.param1 %}
                                    {% set max = effect.param2 %}

                                    {{ min * (100 + carac + characteristics.power) / 100 + domFix }}

                                    {% if min != 0 or max != 0 %}
                                        {% if min != max %}
                                            {% set damages %}
                                                {{ (min * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                                {{ 'to' | trans({}, 'item') }}
                                                {{ (max * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                            {% endset %}

                                            {% set critical %}
                                                {{ ((min + weapon.itemTemplate.criticalHitBonus) * ((100 + carac + characteristics.power + 300 ) / 100) + domFix + characteristics.criticalDamage) | round(0, 'floor') }}
                                                {{ 'to' | trans({}, 'item') }}
                                                {{ ((max + weapon.itemTemplate.criticalHitBonus) * ((100 + carac + characteristics.power + 300 ) / 100) + domFix + characteristics.criticalDamage) | round(0, 'floor') }}
                                            {% endset %}
                                        {% else %}
                                            {% set damages %}
                                                {{ (max * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                            {% endset %}

                                            {% set critical %}
                                                {{ ((max + weapon.itemTemplate.criticalHitBonus) * ((100 + carac + characteristics.power + 300 ) / 100) + domFix + characteristics.criticalDamage)  | round(0, 'floor') }}
                                            {% endset %}
                                        {% endif %}
                                    {% endif %}

                                    {% include 'DofCharactersBundle::fragments.html.twig' %}
                                    <br />
                                {% endfor %}
                                <br>
                                <b>Effets CC :</b><br>
                                {% for effect in rank.effects if effect.critical %}
                                    {% set element = (effect.effectTemplate.element | element) %}
                                    {% if element == "neutral" %}
                                        {% set carac = characteristics.strength %}
                                        {% set domFix = characteristics.neutralDamage %}
                                    {% elseif element == "earth" %}
                                        {% set carac = characteristics.strength %}
                                        {% set domFix = characteristics.earthDamage %}
                                    {% elseif element == "fire" %}
                                        {% set carac = characteristics.intelligence %}
                                        {% set domFix = characteristics.fireDamage %}
                                    {% elseif element == "water" %}
                                        {% set carac = characteristics.chance %}
                                        {% set domFix = characteristics.waterDamage %}
                                    {% elseif element == "air" %}
                                        {% set carac = characteristics.agility %}
                                        {% set domFix = characteristics.airDamage %}
                                    {% elseif element == "heal" %}
                                        {% set carac = characteristics.intelligence %}
                                        {% set heal = characteristics.heals %}
                                    {% endif %}

                                    {% set min = effect.param1 %}
                                    {% set max = effect.param2 %}

                                    {{ min * (100 + carac + characteristics.power) / 100 + domFix }}

                                    {% if min != 0 or max != 0 %}
                                        {% if min != max %}
                                            {% set damages %}
                                                {{ (min * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                                {{ 'to' | trans({}, 'item') }}
                                                {{ (max * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                            {% endset %}
                                        {% else %}
                                            {% set damages %}
                                                {{ (max * (100 + carac + characteristics.power) / 100 + domFix) | round(0, 'floor') }}
                                            {% endset %}
                                        {% endif %}
                                    {% endif %}

                                    {% include 'DofCharactersBundle::fragments.html.twig' %}
                                    <br>
                                {% endfor %} 
                                <div class="row">
                                    {# carcteristiques du sort #}
                                    <hr />
                                    <div class="col-lg-6">
                                        <b>Caractéristiques :</b><br>
                                        <table>
                                            <tr><td>Coût en PA : </td><td class="padLeftTab"> {{ rank.apCost }}</td></tr>
                                            <tr>
                                                <td>Portée : </td>
                                                <td class="padLeftTab">
                                                    {% if rank.minCastRange == rank.maxCastRange %}
                                                        {{ rank.minCastRange }}
                                                    {% else %}
                                                        {{ rank.minCastRange }} - {{ rank.maxCastRange }}
                                                    {% endif %}
                                                {% if rank.modifiableCastRange %} modifiable{% endif %}
                                                </td>
                                            </tr>
                                        </table>
                                    </div>

                                    {# carcteristiques secondaires du sort #}
                                    <div class="col-lg-6">
                                        <b>Autres caractéristiques :</b><br>
                                        <table>
                                            <tr><td>Coups critiques : </td><td class="padLeftTab"> {% if rank.criticalHitDenominator != 0 %}1/{{ rank.criticalHitDenominator }}{% else %} Aucun{% endif %}</td></tr>
                                            {% if rank.maxCastsPerTarget != 0 %}<tr><td>Lancé(s) par tour par cible : </td><td class="padLeftTab"> {{ rank.maxCastsPerTarget }}</td></tr>{% endif %}
                                            <tr><td>PO modifiable : </td><td class="padLeftTab">{% if rank.modifiableCastRange %} Oui{% else %} Non{% endif %}</td></tr>
                                            <tr><td>Lancer en ligne : </td><td class="padLeftTab">{% if rank.lineCast %} Oui{% else %} Non{% endif %}</td></tr>
                                            {% if rank.maxCastsPerTurn != 0 %}<tr><td>Lancer(s) par tour : </td><td class="padLeftTab"> {{ rank.maxCastsPerTurn }}</td></tr>{% endif %}
                                            {% if rank.cooldown != 0 %}<tr><td>Tours entre deux lancers : </td><td class="padLeftTab"> {{ rank.cooldown }}</td></tr>{% endif %}
                                            <tr><td>Ligne de vue : </td><td class="padLeftTab">{% if rank.sightCast %} Oui{% else %} Non{% endif %}</td></tr>
                                            <tr><td>Cellules libres : </td><td class="padLeftTab">{% if rank.needsFreeCell %} Oui{% else %} Non{% endif %}</td></tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <hr />
                {% if spell.breeds is not empty %}
                    <b>Classes :</b>
                    {% for breed in spell.breeds %}
                        <a href="{{ path('dof_characters_show', {'slug': breed.slug}) }}">
                            {{ breed.getName(locales()) }}
                        </a>
                        {% if not loop.last %}
                        |
                        {% endif %}
                    {% endfor %}
                    <br>
                {% endif %}
                {{ spell.getDescription(locales()) }}
            </div>
        </div>
    {% endfor %}

{% endautoescape %}
{% endblock %}
