{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>Builds</li>
{% endblock %}

{% block body %}
    <div class="row">
        {% for character in characters %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                {% include 'DofGraphicsBundle:Component:renderer.html.twig' with {
                    'look': character.stuffs[0].look.toEntityLook()
                } only %}
                <div class="caption">
                    <h3>{{ character.name }}</h3>
                    <p>Niveau {{ character.level }}</p>
                    <p><a href="{{ path('dof_build_show', {'user': character.owner.slug, 'perso': character.slug, 'stuff': character.stuffs[0].slug}) }}" class="btn btn-primary" role="button">See</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="well">
        <div class="page-header">
            <h1>Cr√©er un nouveau personnage</h1>
        </div>
        {{ form(form, { 'style': 'horizontal' }) }}
    </div>
{% endblock %}
