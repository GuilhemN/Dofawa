{% extends 'DofBuildBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
    <li>{{ character.name }}</li>
    <li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
    <h3><strong>{{ character.name }}</strong>, {{ 'level' | trans({'%level%': character.level}, 'item')}}</h3>
    <ul class="nav nav-tabs" role="tablist">
        <li><a href="{{ path('dof_build_show', {'user' : user.slug, 'character' : character.slug, 'stuff' : stuff.slug}) }}">Build</a></li>
        <li class="active"><a href="{{ path('dof_build_show_characteristics', {'user' : user.slug, 'character' : character.slug, 'stuff' : stuff.slug}) }}">Caractéristiques</a></li>
    </ul>
    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>Caractéristique</th><th>Total</th>
                </tr>
            </thead>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/vitality.png') }}" alt="">{{ 'vitality' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.vitality }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/wisdom.png') }}" alt="">{{ 'wisdom' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.wisdom }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt="">{{ 'strength' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.strength }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt="">{{ 'intelligence' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.intelligence }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/water.png') }}" alt="">{{ 'chance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.chance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/air.png') }}" alt="">{{ 'agility' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.agility }}</td>
                </tr>
        </table>
    </div>

    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>Résistances</th><th>%</th><th>fixe</th>
                </tr>
            </thead>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/neutral.png') }}" alt="">{{ 'neutralResistance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.percentNeutralResistance }} %</td><td>{{ characteristics.neutralResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/earth.png') }}" alt="">{{ 'earthResistance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.percentEarthResistance }} %</td><td>{{ characteristics.earthResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/fire.png') }}" alt="">{{ 'fireResistance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.percentFireResistance }} %</td><td>{{ characteristics.fireResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/water.png') }}" alt="">{{ 'waterResistance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.percentWaterResistance }} %</td><td>{{ characteristics.waterResistance }}</td>
                </tr>
                <tr>
                    <td><img src="{{ asset('bundles/dofitems/img/air.png') }}" alt="">{{ 'airResistance' | trans({'%1%': ''},'item') }}</td><td>{{ characteristics.percentAirResistance }} %</td><td>{{ characteristics.airResistance }}</td>
                </tr>
        </table>
    </div>
{% endautoescape %}
{% endblock %}
