{% set templates = [
    'DofMainBundle:Notification-Template:' ~ (notification.type is not empty ? notification.type : 'simple') ~ '.html.twig',
    'DofMainBundle:Notification-Template:default.html.twig'
    ] %}
{% set context = {'ent': notification.entity, 'notification': notification} %}

<a href="{{ block_from(templates, 'path', context) | trim }}">
    {{ block_from(templates, 'title', context) }}
    <br>
    <small>{{ notification.createdAt | date_format }}</small>
</a>
<div class="text-center">
    {{ block_from(templates, 'actions', context) }}
</div>
