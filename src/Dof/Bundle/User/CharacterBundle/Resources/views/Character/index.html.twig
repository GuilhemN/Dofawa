{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    <li>
        {% if app.user == user %}
            Mes personnages
        {% else %}
            Personnages de {{ user.username }}
        {% endif %}
    </li>
{% endblock %}

{% block body %}
{% autoescape %}
    {% for character in user.characters %}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            {% include 'DofGraphicsBundle:Component:renderer.html.twig' with {
                'look': character.look.toEntityLook()
            } only %}
            <div class="caption">
                <h3>{{ character.name }}</h3>
                <p>{{ 'level' | trans({'%level%': character.level}, 'item')}}</p>
                <p></p>
            </div>
        </div>
    </div>
    {% endfor %}
{% endautoescape %}
{% endblock %}
