{% extends 'DofUserCharacterBundle::layout.html.twig' %}

{% trans_default_domain "build" %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dof_profile_userpage', {'slug': character.owner.slug}) }}">{{ character.owner.username }}</a></li>
    <li><a href="{{ path('dof_user_character_show', {'user': character.owner.slug, 'character': character.slug})}}">
        {{ character.name }}
    </a></li>
    <li>{{ stuff.name }}</li>
{% endblock %}

{% block body %}
{% autoescape %}
    {% include 'DofUserCharacterBundle::header.html.twig' %}

    {% for spell in character.breed.sortedSpells %}
       {% include 'DofCharacterBundle::spell.html.twig' %}
    {% endfor %}

{% endautoescape %}
{% endblock %}
