<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Connexion</title>
        <link rel="stylesheet" href="{{ asset('bundles/dofuser/css/login/main.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/dofmain/css/sprite.min.css') }}">
    </head>
    <body>
        <div>
            <a href="/"><div class="submit" style="margin-left: 2% !important;">< {{ 'backhome'|trans({}, 'login') }}</div></a>
        </div>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="sprite logo"></div>
        <div>
            <div id="bloclogin">
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        </div>
    </body>
</html>
