{% extends '::layout.html.twig' %}

{% block breadcrumb %}
	{{ parent() }}
	<li>{{ 'inventory'|trans({}, 'generalTrans') }}</li><li>Familiers</li>
{% endblock %}

{% block body %}
	<h3>Gestionaire de familiers</h3>

    <div class="panel panel-default">
        <div class="panel-heading">Familiers</div>
        <form method="POST" name="feedPets" action="{{ path('dof_items_manager_pets_feed') }}">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Caract√©ristique</th>
                        <th>Dernier repas</th>
                        <th>Prochain repas</th>
                        <th>Nourrir</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pet in pets %}
                        {% set hour = '+' ~ pet.itemTemplate.minFeedInterval ~ ' hour' %}
                        {% set hourMax = '+' ~ pet.itemTemplate.maxFeedInterval ~ ' hour' %}
                        <tr {% if pet.lastMeal is not null and date(pet.lastMeal | date_modify(hour)) < date() %}
                                    class="success"
                                {% elseif pet.lastMeal is not null and (date(pet.lastMeal | date_modify(hour)) > date() and date(pet.lastMeal | date_modify(hourMax)) < date() ) %}
                                    class="warning"
                                {% else %}
                                    class="danger"
                                {% endif %}>
                            <td>

                                {% if pet.name is not null %}
                                    {{ pet.name }}({{ pet.itemTemplate.getName(locales()) }})
                                {% else %}
                                    {{ pet.itemTemplate.getName(locales()) }}
                                {% endif %}
                            </td>
                            <td>
                                {{ pet.characteristic }}
                            </td>
                            <td>
                                {% if pet.lastMeal is not null %}
                                    {{ pet.lastMeal  | date_format }}
                                {% else %}
                                    Jamais!
                                {% endif %}
                            </td>
                            <td>
                                {% if pet.lastMeal is not null %}
                                    
                                    {{ pet.lastMeal | date_modify(hour) | date("d/m/Y H:i:s") }}
                                {% else %}
                                    Jamais!
                                {% endif %}
                            </td>
                            <td>
                                <input type="checkbox"  name="pets[]" value="{{ pet.id }}" value="">
                            </td>
                        </tr>
                    {% else %}
                    	<tr>
                            <td></td> <td>Pas encore de familier dans le gestionnaire!</td><td></td><td></td><td></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Nourrir</button>
        </form>
    </div>

{% endblock %}