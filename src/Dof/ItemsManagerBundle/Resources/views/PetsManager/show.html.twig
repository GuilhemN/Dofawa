{% extends '::layout.html.twig' %}

{% block breadcrumb %}
	{{ parent() }}
	<li>{{ 'inventory'|trans({}, 'generalTrans') }}</li><li>Familiers</li>
{% endblock %}

{% block body %}
	<h3>Gestionaire de familiers</h3>

    <div class="panel panel-default">
        <div class="panel-heading">Familiers</div>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Caract√©ristique</th>
                    <th>Dernier repas</th>
                    <th>Prochain repas</th>
                </tr>
            </thead>
            <tbody>
                {% for pet in pets %}
                    <tr>
                        <td>
                            {% if pet.name is not null %}
                                {{ pet.name }}({{ pet.itemTemplate.getName(locales()) }})
                            {% else %}
                                {{ pet.itemTemplate.getName(locales()) }}
                            {% endif %}
                        </td>
                        <td>
                            {{ pet.characteristic }}
                        </td>
                        <td>
                            {% if pet.lastMeal is not null %}
                                {{ pet.lastMeal | date("m/d/Y H:i:s")}}
                            {% else %}
                                Jamais!
                            {% endif %}
                        </td>
                        <td>
                            {% if pet.lastMeal is not null %}
                                {{ pet.lastMeal |date_modify("+~pet.itemTemplate.minFeedInterval~ hour") | date("m/d/Y H:i:s")}}
                            {% else %}
                                Jamais!
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                	<tr>
                        <td></td> <td>Pas encore de familier dans le gestionnaire!</td><td></td><td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}