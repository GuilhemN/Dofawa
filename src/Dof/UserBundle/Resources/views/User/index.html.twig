{% extends "::layout.html.twig" %}


{% block body %}
<h2>Liste des articles</h2>
<ul>
  {% for article in articles %}
  <li>
    <a href="">{{ article.titre }}</a>
    par {{ article.message }},
    le {{ article.date|date('d/m/Y') }}
  </li>
  {% else %}
  <li>Pas (encore !) d'articles</li>
  {% endfor %}
</ul>
{% endblock %}